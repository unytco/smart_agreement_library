{
  "type": "object",
  "properties": {
    "consumed_inputs": {
      "type": "object",
      "properties": {
        "spender_allocations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "amount": { "type": "object", "additionalProperties": { "type": "string" } },
              "source": { "type": "string" }
            },
            "required": ["amount", "source"]
          }
        },
        "receiver": { "type": "array", "items": { "type": "string" } },
        "return_address": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["spender_allocations", "receiver", "return_address"]
    },
    "inputs": {
      "type": "object",
      "properties": {
        "condition_met": { "type": "boolean" },
        "condition_to_meet": { "type": "string" }
      },
      "required": ["condition_met", "condition_to_meet"]
    }
  },
  "required": ["consumed_inputs", "inputs"]
}
